<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient
                android:startColor="#49dff9"
                android:centerColor="#49dff9"
                android:endColor="#a5e6ef"
                android:angle="0"/>
            <corners
                android:radius="30dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:color="@color/colorPrimary"
                android:width="2dp"/>
            <corners
                android:radius="30dp" />
        </shape>
    </item>
</selector>