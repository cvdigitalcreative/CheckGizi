<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_countainer"
    tools:context=".Boundary.Mainmenu.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/startColor"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Halaman Utama"
            android:textColor="#fff"
            android:textSize="9pt"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:padding="20dp"
            android:id="@+id/btn_home_pengukuran_antropometri"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rectengleround_menuutama"
            android:text="Periksa Gizi Anak"
            android:textColor="#000"/>

        <Button
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:padding="20dp"
            android:id="@+id/btn_home_riwayat_antropometri"
            android:background="@drawable/rectengleround_menuutama2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Riwayat Gizi Anak"
            android:textColor="#fff"/>
    </LinearLayout>

    <Button
        android:layout_margin="30dp"
        android:padding="20dp"
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectengleround_menuutama3"
        android:text="Logout"
        android:textColor="#fff"/>

</LinearLayout>